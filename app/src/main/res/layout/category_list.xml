<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
         xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:app="http://schemas.android.com/apk/res-auto"
         xmlns:tools="http://schemas.android.com/tools"
         android:layout_width="match_parent"
         android:layout_height="166dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            tools:srcCompat="@drawable/hatimage"
            android:id="@+id/categoryImage"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.727"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.015"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" android:contentDescription="@string/hats_image"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryName"
            app:layout_constraintTop_toTopOf="@+id/categoryImage" app:layout_constraintStart_toStartOf="@+id/categoryImage"
            app:layout_constraintEnd_toEndOf="@+id/categoryImage" app:layout_constraintBottom_toBottomOf="@+id/categoryImage"
            tools:text="HATS" android:textSize="24sp" android:textColor="@android:color/white"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>